{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [],
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "./src/",
		"removeComments": true,
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"moduleResolution": "Node",
		"baseUrl": "./src/",
		"paths": {"*": ["*"]},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"./src/**/*",
		"./src/**/*.json"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"files": [
		"src/bin/_references.d.ts"
	]
}